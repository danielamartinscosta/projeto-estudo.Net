@using Negocio.Entidades
@{
    ViewData["Title"] = "Novo Cliente";
}

<div class="text-center">
    <h1 class="display-4">Novo Cliente</h1>
</div>


<form action="/clientes/cadastrar" method="post">
  <div class="form-group">
    <label for="nome ">Nome</label>
    <input type="nome" class="form-control" id="nome" name="nome" placeholder="Digite o nome">
  </div>
  <br>
  <div class="form-group">
    <label for="exampleInputPassword1">Email</label>
    <input type="email" class="form-control" id="email" name="email" placeholder="Insira o e-mail">
  </div>
  <br>
  <button type="submit" class="btn btn-primary">Enviar</button>
  <a href="/clientes" class="btn btn-primary">Voltar</a>
</form>

